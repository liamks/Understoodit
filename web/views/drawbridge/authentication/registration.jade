div.center
  h1 Create Your Understoodit.com Account

  form.form-horizontal(action='/register', method="POST")
    fieldset
      input(type="hidden", name="token", value=token)

      -if(errors.length > 0)
        ul#errors
          for error in errors
            li= error

      -if (inviteToken)
        input(type='hidden', name="inviteToken", value=inviteToken)

      -if (useScreenName)
        div.control-group
          label.control-label(for="screenName") Screen Name
          div.controls
            input.span4(type="text", name="screenName", value=screenName)
            p.help-block You and your students use understoodit.com by going to 
              br
              | http://understoodit.com/<span id="screenNameURL">YOURSCREENNAME</span>

      div.control-group
        label.control-label(for="email") Email
        div.controls
          input.span4(type="text", name="email", value=email)

      div.control-group
        label.control-label(for='password') Password
        div.controls
          input.span4(type="password", name="password", value=password)

      div.control-group
        label.control-label(for='confirmPassword') Confirm Password
        div.controls
          input.span4(type="password", name="confirmPassword", value=confirmPassword)


      if (termsOfService)
        h4 Terms of Service
        div.control-group#tos
          div.controls
            textarea.span4(rows=10)=termsOfService
        div.control-group
          div.controls
            label.checkbox
              input(type="checkbox", name="tos") 
              i I have read and understood the Terms of Service

    div.well
      input.btn.btn-primary(type="submit", value="Register")


