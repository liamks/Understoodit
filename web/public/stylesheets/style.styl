#video
  position absolute
  left 460px
  bottom 14px
  width 500px
  height 281px

  iframe
    width 100%
    box-shadow 0px 0px 20px #000

input, button
  font-family inherit
  -webkit-font-smoothing antialiased

#signup
  input[type=text]
    border:1px solid #ddd;
    padding:10px;
    border-radius:10px;
    border-top-right-radius:0;
    border-bottom-right-radius:0;
    box-shadow: 2px 2px 10px 0 rgba(0,0,0,0.2);
    float:left;
    color:#444;
    width:200px;

  input[type=text]:focus
    border 1px solid #999


  input[type=submit]
    border-radius:10px;
    border-top-left-radius:0;
    border-bottom-left-radius:0;
    padding:4px 8px;
    border:1px solid #284d75;
    box-shadow: 2px 2px 10px 0 rgba(0,0,0,0.2), inset 1px 0 0 rgba(255, 255, 255, 0.125), inset 0 1px 0 rgba(255, 255, 255, 0.125);
    color:#fff;
    text-shadow: 0 1px 0 rgba(0,0,0,0.5);
    background:#4687CE;
    background-linear top, #284d75, #1e3b59
    font-size:1.4em;
    line-height: 20px
    max-height:42px;
    height: 43px

  input[type=submit]:active
    background:#3A6FAA
    background-linear top, #234266, #346599

form
  width: 320px

